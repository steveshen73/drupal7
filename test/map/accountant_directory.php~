<script type="text/javascript">

    var lat=10;
    var lng=10;
    var zoom=14;
    var map = null;
    var geocoder = null;
    var bounds = null;


    function initialize() {
        if (GBrowserIsCompatible()) {
            map = new GMap2(document.getElementById("map"));
            bounds = new GLatLngBounds;
            map.addControl(new GLargeMapControl());
            var MapTypes = map.getMapTypes();
            MapTypes[0].getName= function() { return "Map";}
            MapTypes[1].getName = function() { return "Satellite";}
            MapTypes[2].getName = function() { return "Hybrid";}
            map.hideControls();
            map.setMapType(G_PHYSICAL_MAP);
            GEvent.addListener(map, "mouseover", function(){map.showControls();});
            GEvent.addListener(map, "mouseout", function(){map.hideControls();});
            map.addControl(new GMapTypeControl());
            //map.setCenter(new GLatLng(lat, lng), zoom);
            geocoder = new GClientGeocoder();
        }
    }
     
     //$.getJSON('https://api.bill.com/api/v2/ui/DirectoryListing.json', function(json){});


     function getAddress(){
		$.ajax({
			url: "https://api.bill.com/api/v2/ui/DirectoryListing.json",
			cache: false,
			dataType: "json",
			success:  function(json){
				
				$.each(json.directories,function(){
					var address1 = $(this).addressCity + ',' + $(this).addressState;
                                        var address2 = $(this).addressCity + ',' + $(this).addressState;
                                        var name = $(this).name;
                                        var mktExtId = $(this).mktExtId;

					showAddress(address1, address2, name, mkExtId);
				});
				
			}
		});
	}

    function showAddress(address1,address2,name,mktExtId) {
        if (geocoder) {
            geocoder.getLatLng(
            address1,
            function(point) {
                if (point) {
                    bounds.extend(point);
                    map.setCenter(bounds.getCenter(), map.getBoundsZoomLevel(bounds));
                    var billIcon = new GIcon(G_DEFAULT_ICON);
                    billIcon.image = "images/blank.png";
                    // Set up our GMarkerOptions object
                    markerOptions = { icon:billIcon };
						
                    var marker = new GMarker(point, markerOptions);
                    map.addOverlay(marker);
						
                    GEvent.addListener(marker, "mouseover", function() {
                        marker.openInfoWindowHtml('<b>'+name+'</b><br />'+address2);
                    });
                    GEvent.addListener(marker, "mouseout", function() {
                        marker.closeInfoWindow();
                    });
                    GEvent.addListener(marker, "click",  function() {
                        window.location.href=url;
                    });
                }
            }
        );
		

        }
    }
     

      
</script>

</head>
