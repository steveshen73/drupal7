                      //document.write(address);
		     
		   }
	           if (i = directories.length-1)
                   {
                      address = '"' + directories[i].addressCity + "," + directories[i].addressState + '"';
                      //document.write(address + "]");
		     
                   }

		 });
	      });
}

function getPopup(){
